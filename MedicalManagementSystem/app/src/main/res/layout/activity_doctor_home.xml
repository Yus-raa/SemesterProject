<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="80dp"
        android:paddingBottom="80dp"
        >

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Doctor!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/profileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Profile"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/pendingAppointmentsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending Appointments"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/todaysAppointmentsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Appointments"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/historyUpdateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Patient History"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/generateBillBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Bill"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/patientHistoryBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Patient History"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
