<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="80dp"
        android:paddingBottom="80dp"
        >


        <!-- Dashboard Title -->
        <TextView
            android:id="@+id/dashboardTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="30dp" />

        <!-- Welcome line -->
        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, [Patient Name]!"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/viewProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View My Profile"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/bookAppointmentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/treatmentHistoryBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treatment History"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/billsHistoryBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bill History"
            android:layout_marginTop="10dp" />

        <!-- Logout Button (style differently) -->
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />

    </LinearLayout>
</ScrollView>
